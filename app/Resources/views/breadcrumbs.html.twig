{% if wo_breadcrumbs()|length %}
    {%- spaceless -%}
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="crumbs">
                    {% for b in breadcrumbs %}
                            {% if b.url and not loop.last %}
                                <a href="{{ b.url }}">
                            {% endif %}
                                {{- b.text -}}
                            {% if b.url and not loop.last %}
                                </a>
                            {% endif %}

                            {% if separator is not null and not loop.last %}
                                <span> &#187; </span>
                            {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>
    {%- endspaceless -%}
{% endif %}