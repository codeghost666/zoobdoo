{{ form_start(form, { attr: {'class': 'message-manager widget-message'}, 'enctype': form_enctype(form)}) }}
    <div class="form-group">
        {{ form_widget(form.subject, {'attr': {'class':'form-control subject', 'placeholder':'Subject'}}) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.text, {'attr': {'class':'full-width form-control', 'placeholder':'Message'}}) }}
    </div>
    <div class="form-footer">
        <div class="row edit-row">
            {{ form_widget(form.save, {'label':'Send', 'attr': {'class':'btn red-btn'}}) }}
        </div>
    </div>
{{ form_end(form) }}
