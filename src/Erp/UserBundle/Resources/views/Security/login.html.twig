{% extends '::base.html.twig' %}

{% set headerWhiteClass = true %}

{% block headerBannerTitle %}
    Welcome
{% endblock %}

{% block pageContent %}
    {% block fos_user_content %}
        <div class="page-content">
            <section id="login-form-managers" class="login-form">
                <div class="container">
                    <div class="row">
                        <div class="title-block">
                            <h1 class="bold-text">Login or Create an Account</h1>
                        </div>
                    </div>
                    <div>
                        <div class="login-block">
                            <div>
                                <div class="col-md-12 login-title-wrap">
                                    <span class="login-block-title">Login or Create a New Account below:</span>
                                </div>
                            </div>
                            <div class="row login-block-form">
                                <div class="col-md-6 customer-login">
                                    <span class="customer-title bold-text">Registered Customers</span>
                                    <span class="customer-subtitle">If you have an account with us, log in using your email address.</span>
                                    <form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
                                        {% if error %}
                                            <div class="required-note">
                                                {{ error.messageKey|trans(error.messageData, 'security') }}
                                            </div>
                                        {% endif %}
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                                        <div class="form-group">
                                            <div class="col-xs-4">
                                                <label class="control-label required-label">Email</label>
                                            </div>
                                            <div class="col-xs-8">
                                                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"  class="form-control email"/>
                                                <span class="fa fa-envelope-o"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-xs-4">
                                                <label class="control-label required-label" for="pwd">Password</label>
                                            </div>
                                            <div class="col-xs-8">
                                                <input type="password" id="password" name="_password" required="required" class="form-control password"/>
                                                <span class="fa fa-lock"></span>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    <div class="form-footer">
                                                        <a href="{{ path('fos_user_resetting_request') }}">Forgot Your Password?</a>
                                                        <input type="submit" id="_submit" name="_submit" class="btn red-btn" value="{{ 'Login'|trans }}" />
                                                        <div class="required-note"> * Required Fields</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <div class="col-md-6 new-member-login">
                                    <span class="new-member-title bold-text">Not a Member?</span>
                                    <p>By creating an account with our store, you will be able to move through the checkout
                                        process
                                        faster,
                                        store multiple shipping addresses, view and track your orders in your account and
                                        more.</p>
                                    <div>
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <div class="form-footer">
                                                    <a href="{{ path('fos_user_registration_register') }}" class="btn red-btn">Register</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    {% endblock fos_user_content %}

{% endblock %}
