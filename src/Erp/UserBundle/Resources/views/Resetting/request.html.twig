{% extends '::base.html.twig' %}

{% set headerWhiteClass = true %}

{% block pageContent %}
    {% block fos_user_content %}
        {% trans_default_domain 'FOSUserBundle' %}

        <div class="page-content">
            <section id="login-form-managers" class="login-form reset-form">
                <div class="container">
                    <div class="row">
                        <div class="login-block col-md-6 col-md-offset-3">
                            <div class="row">
                                <div class="col-md-12 reset-block">
                                    <span class="login-block-title">Resetting Password:</span>
                                </div>
                            </div>
                            <div class="row login-block-form">
                                <div class="col-md-12 customer-login">
                                    <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="form-horizontal">
                                        <div class="form-group row">
                                            {% if invalid_username is defined %}
                                                <span class="field-validation-error">{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}) }}</span>
                                            {% endif %}
                                            {% if user_disabled is defined %}
                                                <span class="field-validation-error">Account is disabled. Please contact site Administrator.</span>
                                            {% endif %}
                                            <div class="col-xs-4">
                                                <label class="control-label required-label">{{ 'Email'|trans }}</label>
                                            </div>
                                            <div class="col-xs-8">
                                                <input type="text" id="username" name="username" required="required" class="form-control email" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group">
                                                <div class="col-md-12">
                                                    <div class="form-footer">
                                                        <input class="btn red-btn" type="submit" value="{{ 'Submit'|trans }}" />
                                                        <div class="required-note"> * Required Fields</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
    {% endblock fos_user_content %}

{% endblock %}
