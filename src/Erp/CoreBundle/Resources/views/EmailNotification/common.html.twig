<table width="100%" cellpadding="0" cellspacing="0" border="0" data-mobile="true" dir="ltr" data-width="600"
       style="font-size: 16px; background-color: rgb(237, 237, 237);">
    <thead>
    <tr>
        <td align="center">
            <table cellspacing="0" cellpadding="0" align="center" border="0" class="wrapper" width="600"
                   style="width: 600px;">
                <tbody>
                <tr>
                    <td>
                        <table width="100%" border="0" cellpadding="0" cellspacing="0" align="center"
                               data-editable="preheader">
                            <tbody>
                            <tr>
                                <td align="center"
                                    style="padding: 8px; font-family: Helvetica, Arial, sans-serif; color: rgb(38, 38, 38);"></td>
                            </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
                </tbody>
            </table>
        </td>
    </tr>
    </thead>
    <tbody>
    <tr>
        <td align="center" valign="top" style="padding:0;margin:0;">
            <table align="center" border="0" cellspacing="0" cellpadding="0" width="600"
                   style="margin: 0px; padding: 0px; width: 600px;" class="wrapper">
                <tbody>
                <tr>
                    <td align="left" valign="top" style="margin:0;padding:0;">
                        <table align="center" width="100%" border="0" cellpadding="0" cellspacing="0"
                               style="margin:0;padding:0;" data-editable="text">
                            <tbody>
                            <tr>
                                <td align="center" valign="top"
                                    style="border-top-width: 30px; border-top-style: solid; border-top-color: rgb(237, 237, 237); border-bottom-width: 30px; border-bottom-style: solid; border-bottom-color: rgb(237, 237, 237); padding: 30px; margin: 0px; font-family: Helvetica, sans-serif; color: rgb(44, 78, 115); border-top-left-radius: 28px; border-top-right-radius: 28px; border-bottom-right-radius: 28px; border-bottom-left-radius: 28px; background-color: rgb(255, 255, 255);">
                                    <div style="text-align: center;">
                                        <font size="20" style="font-size: 20px;">
                                            <span style="font-weight: bold; color: rgb(44, 78, 115);">
                                                <img src="{{ imageErp }}">
                                                <br><br>
                                            </span>
                                        </font>
                                    </div>
                                    <div style="text-align: left; width: 474px; margin: 10px 10px 5px 57px;">
                                        <div style="margin-bottom: 15px;">
                                            <font size="20" style="font-size: 20px;">
                                                <span style="font-weight: bold; color: rgb(44, 78, 115);">
                                                    {% block title %}{% endblock %}&nbsp;
                                                </span>
                                            </font>
                                        </div>

                                        <div>
                                            <span style="color: rgb(110, 110, 110); font-size: 16px;">
                                                {% block message %}{% endblock %}
                                                <br>
                                            </span>
                                        </div>
                                    </div>
                                    <div data-box="button" style="width: 100%; margin-top: 0px; margin-bottom: 0px; text-align: center;">
                                        <table border="0" cellpadding="0" cellspacing="0" align="center" style="padding-bottom: 0px; padding-top: 0px; margin: 0px auto;">
                                            <tbody>
                                            <tr>
                                                <td valign="top" align="center"
                                                    style="display: inline-block; padding: 13px 25px; margin: 0px; border-top-left-radius: 7px; border-top-right-radius: 7px; border-bottom-right-radius: 7px; border-bottom-left-radius: 7px; width: 424px; background-color: rgb(107, 187, 38);">
                                                    {% block buttons %}{% endblock %}
                                                </td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
                </tbody>
            </table>
        </td>
    </tr>
    </tbody>
</table>
