{% extends 'ErpCoreBundle::EmailNotification/common.html.twig' %}

{% block title %}
    You have received a new message from a site visitor.
{% endblock %}

{% block message %}
    Name: {{ name }}<br>
    Email: {{ email}}<br>
    Phone: {{ phone}}<br>
    Subject: {{ subject }}<br>
    Message: {{ message }}<br>
    <br><br>
{% endblock %}

{% block buttons %}
    <a href="{{ url }}" style="font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif; color: rgb(255, 255, 255); font-size: 18px; text-decoration: none; font-weight: bold;" target="_blank">
        See all messages in Admin Panel
    </a>
{% endblock %}
