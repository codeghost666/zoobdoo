{% extends 'ErpCoreBundle::EmailNotification/common.html.twig' %}

{% block title %}
    You have received an appointment request!
{% endblock %}

{% block message %}
    Name: {{ userName }}<br>
    Email: {{ userEmail}}<br>
    Subject: {{ subject }}<br>
    Message: {{ message }}
    <br><br>
{% endblock %}

{% block buttons %}
    <a href="{{ url }}" style="font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif; color: rgb(255, 255, 255); font-size: 18px; text-decoration: none; font-weight: bold;" target="_blank">
        Click to see Property Page
    </a>
{% endblock %}
