{% extends '::base.html.twig' %}

{% set headerWhiteClass = true %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/erpcore/js/popup.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/erpcore/js/select2.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/erpproperty/js/search-properties.controller.js') }}"></script>
{% endblock %}

{% block headerBannerTitle %}
    Search Results
{% endblock %}

{% block pageContent %}

    <section id="available-properties-search" class="available-properties-search">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-xs-12 property-search-col">
                    {% include 'ErpPropertyBundle:Search:filters-form.html.twig' %}
                </div>
                <div class="property-cards col-md-9 col-xs-12">
                    {% if properties %}
                        {% for property in properties %}
                            <div class="col-md-4 col-xs-6 property-card">
                                {% include 'ErpPropertyBundle:Property:property-card.html.twig' with {'isForSearch' : true} %}
                            </div>
                        {% endfor %}
                    {% else %}
                        Search returned no results. Please change search parameters and try again.
                    {% endif %}
                </div>
            </div>
            {% include 'ErpPropertyBundle:Search:pagination.html.twig' %}
        </div>
    </section>

{% endblock %}
